{
    "manifest_version": 3,
    "name": "Remove Merolagani Ads",
    "version": "1.0",
    "description": "Remove ads from merolagani.com",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.merolagani.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
  }
  